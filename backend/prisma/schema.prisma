generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Profile {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  education String
  github    String?
  linkedin  String?
  portfolio String?

  skills    Skill[]
  projects Project[]
  work      Work[]
}

model Skill {
  id        Int     @id @default(autoincrement())
  name      String

  profile   Profile @relation(fields: [profileId], references: [id])
  profileId Int
}

model Project {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  link        String?
  skillsUsed  String[]   

  profile     Profile @relation(fields: [profileId], references: [id])
  profileId   Int
}


model Work {
  id        Int     @id @default(autoincrement())
  company   String
  role      String
  duration String

  profile   Profile @relation(fields: [profileId], references: [id])
  profileId Int
}
